generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique
  password              String
  name                  String
  role                  String
  telegramId            BigInt?
  telegramChatId        String?
  telegramUsername      String?
  telegramFirstName     String?
  telegramLastName      String?
  telegramBindingCode   String?
  telegramBindingExpiry DateTime?
  documents             Document[] @relation("UserDocuments")
  recipientDocuments    Document[] @relation("RecipientDocuments")
  responsibleDocuments  Document[] @relation("ResponsibleDocuments")
  watchingDocuments     DocumentWatcher[]
  tasks                 Task[]
  executionAssignments  ExecutionAssignment[]
  // Журналы
  temperatureEntries    TemperatureEntry[]
  healthChecks          HealthCheck[]
  nonconformities       Nonconformity[] @relation("NonconformityCreatedBy")
  closedNonconformities Nonconformity[] @relation("NonconformityClosedBy")
  auditLogs             AuditLog[]
  initiatedAuditSessions AuditSession[] @relation("AuditSessionsInitiated")
  notifications         Notification[]
}

model Document {
  id            Int       @id @default(autoincrement())
  title         String
  body          String
  content       String
  authorId      Int
  author        User      @relation("UserDocuments", fields: [authorId], references: [id])
  recipientId   Int
  recipient     User      @relation("RecipientDocuments", fields: [recipientId], references: [id])
  responsibleId Int?
  responsible   User?     @relation("ResponsibleDocuments", fields: [responsibleId], references: [id])
  status        String    @default("draft")
  currentStep   Int       @default(0)
  initiatorAcknowledged Boolean @default(false)
  returnToInitiator Boolean @default(false)
  executionNotes String?
  createdAt     DateTime  @default(now())
  files         File[]
  tasks         Task[]
  watchers      DocumentWatcher[]
  executionAssignments ExecutionAssignment[]
  registryDocument RegistryDocument?
  temperatureEntries TemperatureEntry[]
  healthChecks       HealthCheck[]
  nonconformities    Nonconformity[]
  ccps               CCP[]
}

model Nonconformity {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  severity    String   @default("critical")
  status      String   @default("open")
  createdAt   DateTime @default(now())
  closedAt    DateTime?

  createdById Int
  createdBy   User     @relation("NonconformityCreatedBy", fields: [createdById], references: [id])
  closedById  Int?
  closedBy    User?    @relation("NonconformityClosedBy", fields: [closedById], references: [id])

  documentId  Int?
  document    Document? @relation(fields: [documentId], references: [id])
  
  ccps        CCP[]
  labTests    LabTest[]
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())

  actorId    Int
  actor      User     @relation(fields: [actorId], references: [id])

  auditSessionId Int?
  auditSession   AuditSession? @relation(fields: [auditSessionId], references: [id])

  action     String
  entityType String
  entityId   Int?
  meta       Json?
}

model AuditSession {
  id                Int      @id @default(autoincrement())
  status            String
  auditType         String
  auditorName       String?
  auditorOrg        String?
  startedAt         DateTime @default(now())
  endedAt           DateTime?
  initiatedByUserId Int
  initiatedBy       User     @relation("AuditSessionsInitiated", fields: [initiatedByUserId], references: [id])
  comment           String?

  auditLogs         AuditLog[]
}

model Task {
  id           Int       @id @default(autoincrement())
  documentId   Int
  document     Document  @relation(fields: [documentId], references: [id])
  assigneeId   Int?
  assignee     User?     @relation(fields: [assigneeId], references: [id])
  step         Int
  status       String    @default("pending")
  action       String    @default("approve")
  instruction  String?
  canSkip      Boolean   @default(false)
  commentRequired Boolean @default(false)
  returnedToAuthor Boolean @default(false)
  visibleAfterStep Int?
  comment      String?
  completedAt  DateTime?
}

model DocumentWatcher {
  id         Int      @id @default(autoincrement())
  documentId Int
  userId     Int
  document   Document @relation(fields: [documentId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model File {
  id         Int       @id @default(autoincrement())
  documentId Int
  document   Document  @relation(fields: [documentId], references: [id])
  url        String
  name       String
  size       Int
  createdAt  DateTime  @default(now())
}

enum ExecutionStatus {
  pending
  viewed
  in_progress
  completed
}

model ExecutionAssignment {
  id          Int              @id @default(autoincrement())
  documentId  Int
  document    Document         @relation(fields: [documentId], references: [id])
  assigneeId  Int
  assignee    User             @relation(fields: [assigneeId], references: [id])
  status      ExecutionStatus  @default(pending)
  deadline    DateTime?
  comment     String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([documentId, assigneeId])
}
 
model Location {
  id        Int         @id @default(autoincrement())
  name      String
  equipment Equipment[]
}

model Equipment {
  id                 Int                @id @default(autoincrement())
  name               String
  locationId         Int
  location           Location           @relation(fields: [locationId], references: [id])
  /// Тип оборудования для фильтрации (например: fridge, freezer, showcase)
  type               String             @default("fridge")
  targetTemp         Int
  tolerance          Int
  temperatureEntries TemperatureEntry[]
}

model TemperatureEntry {
  id          Int       @id @default(autoincrement())
  equipmentId Int
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  date        DateTime  @default(now())
  morning     Int?
  day         Int?
  evening     Int?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  signedAt    DateTime?
  documentId  Int?
  document    Document? @relation(fields: [documentId], references: [id])

  @@unique([equipmentId, date])
}

model Employee {
  id                 Int                   @id @default(autoincrement())
  name               String
  /// Должность сотрудника, отображается в журнале здоровья
  position           String?
  /// Флаг активности: заблокированные сотрудники не отображаются в журналах
  active             Boolean               @default(true)
  healthCheckEntries HealthCheckEmployee[]
}

model HealthCheck {
  id       Int                   @id @default(autoincrement())
  date     DateTime              @default(now())
  userId   Int
  user     User                  @relation(fields: [userId], references: [id])
  signedAt DateTime?
  entries  HealthCheckEmployee[]
  documentId Int?
  document   Document?           @relation(fields: [documentId], references: [id])
}

model HealthCheckEmployee {
  id         Int         @id @default(autoincrement())
  checkId    Int
  check      HealthCheck @relation(fields: [checkId], references: [id])
  employeeId Int
  employee   Employee    @relation(fields: [employeeId], references: [id])
  status     String
  note       String?
}

model RegistryDocument {
  id         Int      @id @default(autoincrement())
  documentId Int      @unique
  document   Document @relation(fields: [documentId], references: [id])
  /// Тип объекта документации (дезсредства/сырьё/оборудование/персонал)
  objectType String
  /// Цех / зона применения
  zone       String?
  /// Поставщик / производитель
  supplier   String?
  /// Срок действия (может отсутствовать)
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  labTests   LabTest[]
}

/// Critical Control Point (CCP) - Критическая контрольная точка HACCP
model CCP {
  id                    Int       @id @default(autoincrement())
  /// Название процесса (например: "Приёмка сырья", "Термообработка")
  process               String
  /// Описание опасности (биологическая, химическая, физическая)
  hazard                String
  /// Уровень риска: low, medium, high
  riskLevel             String    @default("medium")
  /// Меры контроля (что делаем для предотвращения)
  controlMeasures       String
  /// Корректирующие действия (что делать при отклонении)
  correctiveActions     String
  /// Критические лимиты (например: "Температура не выше +4°C")
  criticalLimits        String?
  /// Методы мониторинга
  monitoringProcedure   String?
  /// Ответственный за контроль
  responsiblePerson     String?
  /// Статус: active, resolved, archived
  status                String    @default("active")
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  /// Связи с другими модулями
  relatedDocumentId     Int?
  relatedDocument       Document? @relation(fields: [relatedDocumentId], references: [id])
  relatedNonconformityId Int?
  relatedNonconformity  Nonconformity? @relation(fields: [relatedNonconformityId], references: [id])
  
  /// История действий по CCP
  actions               CCPAction[]
}

/// Действия по CCP (корректирующие меры, проверки)
model CCPAction {
  id          Int      @id @default(autoincrement())
  ccpId       Int
  ccp         CCP      @relation(fields: [ccpId], references: [id], onDelete: Cascade)
  actionType  String   // "check", "corrective", "review"
  description String
  takenAt     DateTime @default(now())
  takenBy     String?  // Кто выполнил
  result      String?  // Результат действия
}

/// Лабораторные исследования
model LabTest {
  id                Int       @id @default(autoincrement())
  /// Дата проведения анализа
  date              DateTime  @default(now())
  /// Тип анализа (микробиология, химия, физика)
  testType          String
  /// Партия/номер образца
  batchNumber       String?
  /// Поставщик/производитель
  supplier          String?
  /// Результат: compliant (соответствует), deviation (отклонение)
  result            String    @default("compliant")
  /// Детали результата (числовые значения, описание)
  resultDetails     String?
  /// Файл отчёта (PDF)
  reportFileUrl     String?
  reportFileName    String?
  /// Кто провёл/зафиксировал
  performedBy       String?
  /// Подпись (дата подписания)
  signedAt          DateTime?
  /// Связь с реестром (поставщик/сырьё)
  registryDocumentId Int?
  registryDocument   RegistryDocument? @relation(fields: [registryDocumentId], references: [id])
  /// Связь с несоответствием (если отклонение)
  nonconformityId    Int?
  nonconformity      Nonconformity? @relation(fields: [nonconformityId], references: [id])
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

/// Уведомления для пользователей
model Notification {
  id          Int       @id @default(autoincrement())
  /// Тип уведомления: critical_deviation, reminder, info
  type        String
  /// Заголовок
  title       String
  /// Текст уведомления
  message     String
  /// Уровень важности: low, medium, high
  priority    String    @default("medium")
  /// Прочитано ли
  isRead      Boolean   @default(false)
  /// Ссылка на связанную сущность (опционально)
  entityType  String?   // "temperature", "health", "ccp", "labtest", "document"
  entityId    Int?
  /// Получатель (если null - для всех с определённой ролью)
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
  /// Роль получателя (если userId null)
  targetRole  String?   // "director", "head", etc.
  
  createdAt   DateTime  @default(now())
  expiresAt   DateTime? // Автоудаление старых уведомлений
}

/// Категории справочников (для сертификатов, оборудования и т.д.)
model MasterDataCategory {
  id          Int       @id @default(autoincrement())
  /// Название категории (например, "Сертификаты на химию", "Сертификаты на сырьё")
  name        String
  /// Тип категории: certificate, equipment, supplier, other
  type        String    @default("certificate")
  /// Описание категории
  description String?
  /// Цвет для UI (hex)
  color       String?
  /// Иконка (название из lucide-react)
  icon        String?
  /// Порядок сортировки
  sortOrder   Int       @default(0)
  /// Активна ли категория
  active      Boolean   @default(true)
  /// Элементы справочника
  items       MasterDataItem[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

/// Элементы справочников (сертификаты, оборудование и т.д.)
model MasterDataItem {
  id          Int       @id @default(autoincrement())
  /// Категория
  categoryId  Int
  category    MasterDataCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  /// Название элемента (например, "Сертификат на моющее средство 'Чистодез'")
  name        String
  /// Описание
  description String?
  /// Дополнительные поля (JSON)
  metadata    Json?
  /// Связь с документом (если есть)
  documentId  Int?
  /// Срок действия (для сертификатов)
  expiresAt   DateTime?
  /// Поставщик/производитель
  supplier    String?
  /// Активен ли элемент
  active      Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
